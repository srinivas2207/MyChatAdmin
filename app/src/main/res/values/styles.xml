<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ColorPrimary_green</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark_green</item>
        <item name="colorAccent">@color/ColorPrimary_green</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- GREEN APP THEME -->
    <style name = "GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary_green</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark_green</item>
        <item name="colorAccent">@color/ColorPrimary_green</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:background">@color/ColorPrimary_green</item>
    </style>

    <!-- Button styling -->
    <style name="bgColoredBtn" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="borderLessColored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="welcomeMessageStyle">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>


    <!-- textviews styling -->
    <style name="userNameToolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lastseenToolbar">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="userNameListItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="timeListItem">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="statusListItem">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="profileStatusTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>


    <style name="newMsgListItem">
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/custom_bg</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>


    <style name="message">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="time">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="chatMsgStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="chatTimeStyle">
        <item name="android:textSize">11sp</item>
    </style>




    <!-- Theme radio button styling -->

    <style name="userTypeStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>


    <style name="toolbarExpandTitleStyle">
        <item name="android:textSize">24sp</item>
    </style>


</resources>
